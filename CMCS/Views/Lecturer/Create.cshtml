@model Claim
@{
    ViewData["Title"] = "Submit Claim";
}

<h2>Submit Claim</h2>

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label for="HoursWorked">Hours Worked</label>
        <input asp-for="HoursWorked" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="HourlyRate">Hourly Rate</label>
        <input asp-for="HourlyRate" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Notes">Additional Notes</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label for="Document">Upload Supporting Document</label>
        <input type="file" name="document" class="form-control" accept=".pdf, .docx, .xlsx" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
