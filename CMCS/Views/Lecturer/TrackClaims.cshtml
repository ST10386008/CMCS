@model IEnumerable<Claim>
@{
    ViewData["Title"] = "Track Claims";
}

<h2>Track Claims</h2>

<table class="table">
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>Hours Worked</th>
            <th>Claim Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.ClaimId</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.SubmissionDate.ToString("MM/dd/yyyy")</td>
                <td>@claim.Status</td>
            </tr>
        }
    </tbody>
</table>
